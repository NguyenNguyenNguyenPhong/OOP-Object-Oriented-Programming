		sc.close();
	}
	
	public static void playMedia(Cart anOrder) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Play");
		System.out.print("Media Title is: ");
		String title = sc.nextLine();
		System.out.println("");
//		Check Media in Store and Play. But Store is null.
//		if(anOrder.search(title)) {
//			Play: Media in Store
//		}
		sc.close();
	}
	
	public static void menu_1(Scanner sc, Cart anOrder) {
		int k = sc.nextInt();
		do {
			switch (k){
				case 0:
					k = 0;
					break;
				case 1:
					seeAMediaDetails(anOrder);
					mediaDetailsMenu();	
					break;
				case 2:
					addToCart(sc, anOrder);
					anOrder.printLength();
					break;
				case 3:
					playMedia(anOrder);
					break;
				case 4:
					break;
				default:
					k = 0;
					break;
			}
		} while(k == 0);
	}
	
	public static void menu(Scanner sc, Cart anOrder) {
		int k = sc.nextInt();
		do {
			switch (k){
				case 0:
					k = 0;
					System.out.println("Exit");
					break;
				case 1:
					anOrder.printCart();
					storeMenu();
					menu_1(sc, anOrder);
					break;
				case 2:
					addToCart(anOrder);
					anOrder.printLength();
					break;
				case 3:
					break;
				default:
					k = 0;
					break;
			}
		} while(k == 0);
	}
	
	public static void main(String[] args) {
		showMenu();
		Scanner sc = new Scanner(System.in);
		Cart anOrder = new Cart();
		menu(sc, anOrder);
		// TODO Auto-generated method stub
		sc.close();
	}
}
